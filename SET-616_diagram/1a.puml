@startuml no1a
start
    :input number;
    if (number < 0 or number > 1000) then (yes)
        :status error;
    else (no)
        :sum = 0;
        :i = 1;
        while (i <= number) is (yes)
            :sum = sum + 1;
            :i = i + 1;
        endwhile(no)
        :output sum;
    endif
end
@enduml